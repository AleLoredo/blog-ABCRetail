doctype html
html
head
    title Blog
body
    h1 Blog de Publicaciones
    ul
    each post in posts
        li
        h2 #{post.title}
        p #{post.content}
        a(href=`/edit/${post.id}`) Editar
        form(action=`/delete/${post.id}`, method="POST")
            button(type="submit") Eliminar
        form(action=`/comment/${post.id}`, method="POST")
            input(type="text" name="comment" placeholder="Comentar")
            button(type="submit") Enviar Comentario
        form(action="/search", method="GET")
            input(type="text" name="query" placeholder="Buscar publicaciones")
            button(type="submit") Buscar
