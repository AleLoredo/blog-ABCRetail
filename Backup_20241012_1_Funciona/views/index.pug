extends layout.pug

block content
    h1 Bienvenido al Blog Personal
    h2 Crear nueva publicación
    form(action="/create", method="POST")
        table 
            tr 
                td 
                    label(for="title") Título:
                td 
                    input(type="text", name="title", required)
            tr 
                td 
                    label(for="content") Contenido:
                td 
                    textarea(name="content", required)
        table 
            tr 
                td 
                    button(type="submit") Crear Publicación

    // Listado de publicaciones
    h2 Publicaciones
    each post, index in posts
        .post
            table 
                tr 
                    td 
                        h3 #{post.title}
                tr 
                    td 
                        p #{post.content}
                tr 
                    td 
                        p Autor: #{post.author}
            table 
                tr 
                    td 
                        div.button-container
                            if post.author === currentUser
                                form(action=`/delete/${index}`, method="POST")
                                button(type="submit") Eliminar
                                a(href=`/edit/${index}`, style="button") Editar
    table 
        tr 
            td 
                a(href="/logout") Salir del Blog
